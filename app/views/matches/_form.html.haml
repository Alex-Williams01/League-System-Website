= form_for @match do |f|
  - if @match.errors.any?
    #error_explanation
      %h2= "#{pluralize(@match.errors.count, "error")} prohibited this match from being saved:"
      %ul
        - @match.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :match_time
    = f.datetime_select :match_time
  .field
    = f.label :teams
    = collection_check_boxes(:match, :team_ids, Team.all, :id, :name, {}, {:multiple => true})
  .actions
    = f.submit 'Save'
