.container-fluid
  .page-header
    %h1=t('.title')

  %table.table.table-hover.table-striped.table-bordered
    %caption=t('.caption')
    %thead
      %tr
        %th=t('.matchtime')
        %th=t('.team1')
        %th=t('.team2')
        %th
        %th

    %tbody
      - @matches.each do |match|
        %tr
          %td= match.match_time
          %td= match.teams.map(&:name).first
          %td= match.teams.map(&:name).second
          %td= link_to t('.show'), match
          %td= link_to t('.destroy'), match, method: :delete, data: { confirm: t('.confirm') }

  %br
  %a.btn.btn-success{:href => new_match_path, :role => "button"} New Match
