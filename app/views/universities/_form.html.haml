= form_for @university do |f|
  - if @university.errors.any?
    #error_explanation
      %h2= "#{pluralize(@university.errors.count, "error")} prohibited this university from being saved:"
      %ul
        - @university.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address
    = f.text_field :address
  .actions
    = f.submit t('.save')
