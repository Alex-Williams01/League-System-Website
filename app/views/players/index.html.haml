%h1=t('.title')

%table.table.table-hover.table-striped.table-bordered
  %caption=t('.caption')
  %thead
    %tr
      %th=t('.team')
      %th=t('.name')
      %th=t('.bio')
      %th=t('.playtime')
      %th=t('.kd')
      %th
      %th
      %th

  %tbody
    - @players.each do |player|
      %tr
        %td= player.team.name
        %td= player.name
        %td= player.bio
        %td= player.playtime
        %td= player.kd
        %td= link_to t('.show'), player
        %td= link_to t('.edit'), edit_player_path(player)
        %td= link_to t('.destroy'), player, method: :delete, data: { confirm: t('.confirm') }

%br
